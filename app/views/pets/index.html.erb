   <div class="table-container">
    <div class = "para-container">
      <h1>Every pet deserves a loving home</h1>
      <p>Adopt by selecting any of the below or Donate a pet TODAY! </p>
      <%= link_to "Donate", new_pet_path, class: "nav-link" %>
    </div>
      <% @pets.each do |pet| %>
        <div class="pet-card">
          <h2><%= pet.name %></h2>
          <% if pet.photo.attached? %>
            <%= link_to pet_path(pet) do %>
              <%= cl_image_tag pet.photo.key, height: 140 %>
            <% end %>
          <% else %>
            <div class="placeholder-image">No Photo Available</div>
          <% end %>
          <p>Breed: <%= pet.breed %></p>
          <p>Age:<%= pet.age %> years</p>
        </div>
      <% end %>
    </div>
