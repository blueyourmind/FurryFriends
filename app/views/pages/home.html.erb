<body>

   <div class="table-container">
     <h1> All our friends   </h1>

 <body>
<div class="table-container">
  <% @pets.each do |pet| %>
    <div class="pet-card">
      <h2><%= pet.name %></h2>
      <%= link_to pet_path(pet) do %>
        <%= cl_image_tag pet.photo.key, height: 270 %>
      <% end %>
      <p><strong>Breed:</strong> <%= pet.breed %></p>
      <p><strong>Age:</strong> <%= pet.age %> years</p>
    </div>
  <% end %>
</div>

</body>
</html>
